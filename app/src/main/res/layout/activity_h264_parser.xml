<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".h264.decode.H264ParserActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="384dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000" />

        <TextureView
            android:id="@+id/texture"
            android:layout_width="368dp"
            android:layout_height="384dp" />

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickBtn1"
        android:text="拷贝h264文件（完整文件）"
        tools:ignore="HardcodedText" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickBtn2"
        android:text="拷贝h264文件（片段文件）"
        tools:ignore="HardcodedText" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickBtn3"
        android:text="选择h264文件"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/toggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickBtn4"
        android:text="暂停"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        tools:ignore="HardcodedText" />

</LinearLayout>