<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.server.ServerScreenActivity">

    <Button
        android:id="@+id/start_media_projection"
        android:onClick="clickBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启录屏"
        app:layout_constraintBottom_toTopOf="@+id/start_screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/start_screen"
        android:onClick="clickBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="push"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_media_projection" />

</androidx.constraintlayout.widget.ConstraintLayout>